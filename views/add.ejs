<!-- Item Entry -->

<div class="add-con" style="font-family: Arial, Helvetica, sans-serif; font: bold;">
  <form action="/successitem" method="POST">
    <!--  General -->
    <div class="form-group">
      <h2 class="heading full">Item Details</h2>
      <div class="controls full">
        <input type="text" id="firstName" class="floatLabel" name="pname" autocomplete="off">
